{
  "servers": [
    {
      "default_log_path": "stdout",
      "listeners": [
        {
          "name":"grpc",
          "address": "0.0.0.0:34904",
          "bind_port": true,
          "filter_chains": [{
            "filters": [
              {
                "type": "grpc",
                "config": {
                  "server_name":"runtime",
                  "grpc_config": {
                    "hellos": {
                      "helloworld": {
                        "hello": "Hi"
                      }
                    }
                  }
                }
              }
            ]
          }]
        },
        {
          "address": "0.0.0.0:2045",
          "bind_port": true,
          "filter_chains": [
            {
              "filters": [
                {
                  "type": "proxy",
                  "config": {
                    "downstream_protocol": "Http1",
                    "upstream_protocol": "Http1",
                    "router_config_name": "server_router"
                  }
                }
              ]
            }
          ],
          "stream_filters": [
            {
              "type": "Layotto",
              "config": {
                "instance_num": 1,
                "vm_config": {
                  "engine": "wasmer",
                  "path": "demo/wasm/code/golang/wasm.wasm"
                }
              }
            }
          ]
        }
      ],
      "routers": [
        {
          "router_config_name": "server_router",
          "virtual_hosts": [
            {
              "name": "serverHost",
              "domains": [
                "*"
              ],
              "routers": [
                {
                  "direct_response": {
                    "status": 200
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}